@model IEnumerable<ETicaretMVC.Models.Urun>

@{
    ViewBag.Title = "Anasayfa";
}

<h2>Anasayfa</h2>

<style>
    .over {
    }

    td {
        height: 40px;
        cursor: pointer;
    }

    tr.over:hover {
        background-color: lightgray;
    }
</style>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fiyat)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="over" onclick="location.href = '@(Url.Action("Detay", "Urun", new { id = item.Id }))'">
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
        </tr>
}
</table>
